<!DOCTYPE html>
<script>
    var Session = '<%- session %>'
    console.log(Session)
</script>

<html>

<head>

    <title>Love for the Uglies</title>
    <%- include('../partials/nav', {active: "Yourpage" }) %>
        <link rel="stylesheet" href="styles/navigation-bar.css">
        <link rel="stylesheet" href="styles/yourpage.css">
        <script src="scripts\yourpage.js"></script>
</head>

<body>
    <div id="bodyDiv">
        <% if(session.InterestedEvents !=null){%>
            <div id="helloDiv">
            <h1>Hello <%= session.username %>!</h1>
            <h2>Your recent activity:</h2>
            <% for(i=0; i<session.InterestedEvents.length; i++){ %>
                <h3>
                    <%= session.InterestedEvents[i] %>
                </h3>
                <% } %>
                        <h3></h3>
                    </div>
                        <br><br>
                        <div id="editProfileDiv">

                            <h1>Edit Account</h1>
                        <%if(session.username !=null){ %>
                            <div id="EditProfile">
                                <label for="ChangeUsername">Change Username:</label>
                                <input class="txt" type="text" id="newUsername" placeholder="<%=session.username%>">
                                <button id="nameChangeButton" type="button">Change Name</button>
                            </div><br>

                            <button type="button" id="deleteAccount">Delete Account</button>
                            <% } %>

                        </div>
                    <% }else{ %>

                        <h1>You need to log in to view this page</h1>                        
                    <% } %>
                </div>
</body>

</html>